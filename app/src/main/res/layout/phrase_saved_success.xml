<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlayColor">

    <TextView
        android:id="@+id/success_view"
        android:layout_width="554dp"
        android:layout_height="wrap_content"
        android:background="@drawable/saved_phrase_success_background"
        android:drawablePadding="@dimen/error_drawable_padding"
        android:gravity="center"
        android:paddingStart="@dimen/error_horizontal_padding"
        android:paddingTop="@dimen/error_vertical_padding"
        android:paddingEnd="@dimen/error_horizontal_padding"
        android:paddingBottom="@dimen/error_vertical_padding"
        android:text="@string/saved_to_category"
        android:textColor="@color/textColor"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>